<% provide(:title, @user.name) %>
  <!-- tr:Table Row	表の行  th:Table Header	表の見出しセル td:Table Data	表のデータセル	 -->
  <!--rowspan:縦結合、colspan：横結合-->

<div><!-- ユーザー情報テーブル -->
<% unless current_user?(@user) %>
  <%= link_to "戻る", 'javascript:history.back()', class: "btn btn-lg btn-primary" %>
<% end %>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td><%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-xs btn-primary" if current_user?(@user)%>
          <%= l(@first_day,format: :middle) %>
          時間管理表
          <%= link_to "→", user_path(date: @first_day.next_month), class: "btn btn-xs btn-primary" if current_user?(@user)%>
          </td>
      <td>
        指定勤務開始時間 <%= l(@user.designated_work_start_time, format: :time) %><br>
        指定勤務終了時間 <%= l(@user.designated_work_end_time, format: :time) %>
      </td>
      
      <td colspan="3">基本時間 <%= format_basic_info(@user.basic_work_time) %> </td>
      <td>初日　<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属　<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>名前　<%= @user.name %></td>
      <td>コード</td>
      <td></td>
      <td>出勤日数　<%= @worked_sum %>日</td>
      <td>締め　<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div><!-- ユーザー情報テーブル・勤怠テーブル間の通知ボタンと勤怠編集ボタン -->
<% if current_user?(@user) %>
  <% if @monthly_requests.count == 0 %>
    【所属長承認申請のお知らせ】<br>
  <% else %>
    <%= link_to "【所属長承認申請のお知らせ】#{@monthly_requests.count}件の通知があります", edit_user_monthly_request_path(@user, date: @first_day), remote: true %><br>
  <% end %>
  <%= link_to "【勤怠変更申請のお知らせ】○件の通知があります", "#", remote: true %><br>
  <%= link_to "【残業申請のお知らせ】○件の通知があります", "#", remote: true %><br>
  <%= link_to "勤怠を編集", attendances_edit_user_path(date: @first_day), class: "btn btn-primary" %>
  <!--<!%= link_to "週間表示", user_show_one_week_path(current_user, date: @first_day_of_week), class: "btn btn-primary" %>-->
<% end %>
</div>

<div><!-- 勤怠テーブル -->
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan = "3">残業申請</th>
        <th rowspan = "3">日付</th>
        <th rowspan = "3">曜日</th>
        <th colspan = "7">実績</th>
        <th colspan = "5">所定外勤務</th>
      </tr>
      <tr>
        <th rowspan = "2">勤怠登録</th>
        <th colspan = "2">出社</th>
        <th colspan = "2">退社</th>
        <th rowspan = "2">在社時間</th>
        <th rowspan = "2">備考</th>
        <th colspan = "2">終了予定時間</th>
        <th rowspan = "2">時間外時間</th>
        <th rowspan = "2">業務処理内容</th>
        <th rowspan = "2">指示者確認㊞</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th>時</th>
        <th>分</th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
        <td>
        
 <%=  over_time_request(day).end_scheduled_at if over_time_request(day).present? %> 
 <%=  day.id %> 
          <%= link_to "残業申請",new_user_over_time_request_path(@user, day), remote: true, class: "btn btn-primary"  if current_user?(@user) %>
      
        </td>
        <%
=begin%>
 <td><%= day.active_over_time_requests.present? %></td>
          <td><!-- 残業申請ボタン -->
          <% unless day.active_over_time_requests.present? %>
            <%= link_to "残業申請",new_user_over_time_request_path(@user, day), remote: true, class: "btn btn-primary"  if current_user?(@user) %>
          <% else %>
            <%= link_to "最申請",edit_user_over_time_request_path(@user, day), remote: true, class: "btn btn-primary"  if current_user?(@user) %>
          <% end %>
        </td> 
<%
=end%>
          <td><!-- 日付 -->
            <%= l(day.worked_on, format: :short) %>
          </td>
          <td class="<%= "wday#{day.worked_on.wday}"%>"><!-- 曜日 -->
            <%= $days_of_the_week[day.worked_on.wday] %>
          </td>
          <td><!-- 勤怠登録ボタン-->
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" if current_user?(@user)%>
            <% end %>
          </td>
          <td><!-- 出社ー時間 -->
            <%= l(day.started_at, format: :hour) if day.started_at.present? %>
          </td>
          <td><!-- 出社ー分 -->
            <%= every_15_minutes(day.started_at) if day.started_at.present? %>
          </td>
          <td><!-- 退社ー時間 -->
            <%= l(day.finished_at, format: :hour) if day.finished_at.present? %>
          </td>
          <td><!-- 退社ー分 -->
            <%= every_15_minutes(day.finished_at) if day.finished_at.present? %>
          </td>
          <td><!-- 在社時間-->
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><!-- 備考 -->
            <%= day.note %>
          </td>
          <td><!-- 所定外勤務終了予定ー時間 -->
            
 <%= l(over_time_request(day).end_scheduled_at, format: :hour) if over_time_request(day).present? %> 
          </td>
          <td><!-- 所定外勤務終了予定ー分 -->
             <%= every_15_minutes(over_time_request(day).end_scheduled_at) if over_time_request(day).present? %>
          </td>
          <td><!-- 時間外時間 -->
            <% if over_time_request(day).present? %>
             
 <%= sprintf("%.2f",(over_time_request(day).end_scheduled_at - @user.designated_work_end_time.change(year: @first_day.year, month: day.worked_on.month, day: day.worked_on.day))/60/60) %> 


<%= over_time_request(day).end_scheduled_at %>

            <% end %>
          </td>
          <td><!-- 業務処理内容 -->
             <%=  %>
          </td>
          <td><!-- 指示者確認㊞ -->
             <%=  %>
          </td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <td colspan = "1"><!-- 総合勤務時間 -->
      <%= basic_work_times_sum(@user.basic_work_time, @worked_sum) %>
      </td>
      <td colspan = "2"><!-- 空白 -->
      </td>
      <td colspan="5"><!-- 合計在社時間 -->
        <%= @total_working_times %>
      </td>
      <td colspan="1"><!-- 空白 --></td>
      <td colspan="5"><!-- 空白 --></td>
      <td colspan="1"><!-- 1ヶ月分の勤怠を上長へ申請 -->
        <div>
          <% if @monthly_request.state == "なし" %>
            所属長承認：未
          <% elsif @monthly_request.state == "申請中" %>
            所属長承認：<%= @monthly_request.requested.name %>に申請中
          <% elsif @monthly_request.state == "承認" %>
            所属長承認：<%= @monthly_request.requested.name %>から承認済
          <% else @monthly_request.state == "否認" %>
            所属長承認：<%= @monthly_request.requested.name %>から否認
          <% end %>
        </div>
        <div>
          <% if current_user?(@user) %>
            <%= form_with(model: @monthly_request, url: user_monthly_request_path(@monthly_request, date: @first_day), local: true, method: :patch) do |f| %>
              <%= f.collection_select :requested_id, @superiors_other_then_myself, :id, :name %><br>
              <%= f.submit "申請", class: "btn btn-lg btn-primary" %>
            <% end %> 
          <% end %>
        </div>
      </td>
    </tfoot>
  </table>
</div>


<div> <!-- ひと月の勤怠申請確認用（完成後は削除または非表示にする） -->
  <% @monthly_requests.each do |monthly_request| %>
    <td>申請者:<%= monthly_request.requester.name %></td><br>
    <td>申請先:<%= monthly_request.requested.name %></td><br>
    <td>状　態:<%= monthly_request.state %></td><br>
    <td>申請月:<%= monthly_request.request_month %></td><br>
    <td>-----------------------</td><br>
  <% end %>

  <td>**********************</td><br>
  <td>
    リクエストid：<%= @monthly_request.id %><br>
    リクエスト月：<%= @monthly_request.request_month %>
        申請先：<%= @monthly_request.requested.name %>:<%= @monthly_request.state%><br>
    チェック状態：<%= @monthly_request.check %><br>
  </td>
</div>

<!-- モーダルウインドウ表示 -->
<div id="edit-monthly-request" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<div id="over-time-request-new" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>